<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TesteRec.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TesteRec"
    xmlns:layouts="clr-namespace:TesteRec.Layouts"
    xmlns:layoutsRel="clr-namespace:FinaGear.Layouts.Relatorios"
    Shell.FlyoutBehavior="Disabled"
    Title="TesteRec"
    Shell.TabBarForegroundColor="#7114E7"
    Shell.TabBarTitleColor="#7114E7">

        

    <TabBar>
        <ShellContent Title="Histórico" 
                      Icon="history.png"
                      ContentTemplate="{DataTemplate layouts:Home}" />
        <ShellContent Title="Lembretes" 
                      Icon="bell.png"
                      ContentTemplate="{DataTemplate layouts:Lembretes}" />
        <ShellContent Title="Relatórios" 
                      Icon="relatorio.png"
                      ContentTemplate="{DataTemplate layoutsRel:RelGeral}" />
        <ShellContent Title="Configurações" 
                      Icon="setting.png"
                      ContentTemplate="{DataTemplate layouts:Configuracoes}" />
    </TabBar>

</Shell>
