<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TesteRec.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TesteRec"
    xmlns:layouts="clr-namespace:TesteRec.Layouts"
    Shell.FlyoutBehavior="Disabled"
    Title="TesteRec">

    <TabBar>
        <!-- Primeira aba -->
        <ShellContent Title="Home" 
                      Icon="home_icon.png"
                      ContentTemplate="{DataTemplate layouts:Home}" />

        <!-- Segunda aba -->
        <ShellContent Title="Settings" 
                      Icon="settings_icon.png"
                      ContentTemplate="{DataTemplate layouts:Configuracoes}" />

        <!-- Terceira aba -->
        <ShellContent Title="About" 
                      Icon="about_icon.png"
                      ContentTemplate="{DataTemplate layouts:InclusaoServico}" />
    </TabBar>

</Shell>
